# ANTHROPIC_API_KEY - Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-placeholder-key

# TWILIO_ACCOUNT_SID - Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# TWILIO_AUTH_TOKEN - Get from: https://console.twilio.com
TWILIO_AUTH_TOKEN=twilio_auth_token_placeholder

# VESSEL_API_URL - Your vessel data API endpoint
VESSEL_API_URL=https://api.example.com/vessels

# VESSEL_API_KEY - Optional: If your API requires authentication
VESSEL_API_KEY=vessel_api_key_placeholder

# Email Service Configuration (choose one)
# Option 1: SendGrid (Recommended for simplicity)
SENDGRID_API_KEY=SG.placeholder_api_key_here
# Get from: https://app.sendgrid.com/settings/api_keys

# Option 2: AWS SES (Alternative email service)
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_REGION=us-east-1

# Email Configuration
DEFAULT_SENDER_EMAIL=reports@kivaan.com
DEFAULT_SENDER_NAME=KIVAAN Vessel Intelligence

# File Storage Configuration (for Excel downloads)
# Option 1: Custom storage URL (S3, CloudFront, etc.)
EXCEL_STORAGE_URL=https://your-storage.com
# Option 2: Use Netlify's /tmp/ directory (default, files expire after 5 minutes)
# Leave EXCEL_STORAGE_URL unset to use temporary storage

# Optional: User Email Lookup
# If you have a CRM/API that maps phone numbers to email addresses
USER_EMAIL_MAPPING_API=https://your-crm-api.com/user-lookup
# If not set, the system will prompt users for their email address
