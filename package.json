{
  "name": "pscbot",
  "version": "1.0.0",
  "description": "WhatsApp chatbot for maritime vessel PSC (Port State Control) data queries using Twilio, Claude AI, and Netlify serverless functions",
  "main": "index.js",
  "scripts": {
    "build": "echo 'Validating JavaScript syntax...' && (for file in netlify/functions/*.js utils/*.js config/*.js; do [ -f \"$file\" ] && node -c \"$file\" || exit 1; done) && echo 'âœ“ All JavaScript files validated successfully'",
    "dev": "netlify dev",
    "deploy": "netlify deploy --prod",
    "deploy:preview": "netlify deploy",
    "test": "node test/test-vessel-lookup.js && node test/test-api-client.js",
    "test:excel": "node test/test-excel-generation.js",
    "test:email": "node test-email-sending.js",
    "test:setup": "node test-setup.js",
    "lint": "echo 'Add linter if needed'",
    "logs": "netlify functions:log whatsapp-webhook",
    "logs:follow": "netlify functions:log whatsapp-webhook --follow"
  },
  "keywords": [
    "whatsapp",
    "chatbot",
    "twilio",
    "claude-ai",
    "netlify",
    "serverless",
    "maritime",
    "vessel",
    "psc"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^2.6.7",
    "exceljs": "^4.4.0",
    "@sendgrid/mail": "^7.7.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^25.0.1",
    "@types/node-fetch": "^2.6.13",
    "netlify-cli": "^17.0.0",
    "typescript": "^5.9.3"
  }
}
